<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_tosca"
    android:orientation="vertical"
    tools:context=".DaftarActivity">


    <TextView
        android:id="@+id/textdaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/robotomedium"
        android:text="Daftar"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textdaftar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/robotoregular"
        android:text="Silahkan Buat Akun anda terlebih dahulu"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/textdaftar"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/textdaftar"
        app:layout_constraintTop_toBottomOf="@+id/textdaftar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/daftar_login_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textdaftar2">


        <EditText
            android:id="@+id/editpassword_daftar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/formkolom"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="7dp"
            android:fontFamily="@font/robotoregular"
            android:hint="Password"
            android:inputType="textVisiblePassword"
            android:padding="12dp"
            android:textColor="@color/trans_font1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/editemail_daftar"
            app:layout_constraintStart_toStartOf="@+id/editemail_daftar"
            app:layout_constraintTop_toBottomOf="@+id/editemail_daftar" />

        <EditText
            android:id="@+id/editemail_daftar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/formkolom"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="7dp"
            android:fontFamily="@font/robotoregular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/trans_font1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/editnotelp_daftar"
            app:layout_constraintStart_toStartOf="@+id/editnotelp_daftar"
            app:layout_constraintTop_toBottomOf="@+id/editnotelp_daftar" />

        <EditText
            android:id="@+id/editNama_daftar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/formkolom"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="7dp"
            android:fontFamily="@font/robotoregular"
            android:hint="Nama"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/trans_font1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editnotelp_daftar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/formkolom"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="7dp"
            android:fontFamily="@font/robotoregular"
            android:hint="Nomor telepon"
            android:inputType="text|number"
            android:padding="12dp"
            android:textColor="@color/trans_font1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/editNama_daftar"
            app:layout_constraintStart_toStartOf="@+id/editNama_daftar"
            app:layout_constraintTop_toBottomOf="@+id/editNama_daftar" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDaftar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/robotomedium"
            android:letterSpacing="0"
            android:text="Daftar"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="13sp"
            app:backgroundTint="@color/dark_blue"
            app:cornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="@+id/editpassword_daftar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/editpassword_daftar"
            app:layout_constraintTop_toBottomOf="@+id/editpassword_daftar" />

        <TextView
            android:id="@+id/textdaftar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/robotoregular"
            android:text="Sudah memiliki akun?"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDaftar" />

        <TextView
            android:id="@+id/texttomasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/robotoregular"
            android:text="Masuk"
            android:textColor="@color/dark_blue"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toEndOf="@+id/textdaftar3"
            app:layout_constraintTop_toBottomOf="@+id/btnDaftar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textdaftar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/robotoregular"
        android:text="Atau dengan"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/googlebtndaftar"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_shape"
        android:drawableTop="@drawable/ic_google"
        android:fontFamily="@font/robotolight"
        android:paddingTop="12dp"
        android:text="Google"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fbbtndaftar"
        android:layout_width="90dp"
        android:layout_height="71dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_shape"
        android:drawableTop="@drawable/ic_facebook"
        android:fontFamily="@font/robotolight"
        android:paddingTop="12dp"
        android:text="Facebook"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tamubtndaftar"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_shape"
        android:drawableTop="@drawable/ic_person"
        android:fontFamily="@font/robotolight"
        android:paddingTop="12dp"
        android:text="Tamu"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>